<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.syedabdullah.newsstream.ui.HomeFragment"
        android:label="News Stream"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_bookmarkFragment"
            app:destination="@id/bookmarkFragment" />
        <action
            android:id="@+id/action_homeFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFeedFragment"
        android:name="com.syedabdullah.newsstream.ui.NewsFeedFragment"
        android:label="News Stream"
        tools:layout="@layout/fragment_news_feed" >
        <action
            android:id="@+id/action_newsFeedFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
        <argument
            android:name="selected_category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkFragment"
        android:name="com.syedabdullah.newsstream.ui.BookmarkFragment"
        android:label="Bookmarks"
        tools:layout="@layout/fragment_bookmark" >
        <action
            android:id="@+id/action_bookmarkFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_bookmarkFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="com.syedabdullah.newsstream.ui.NewsDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_news_details" >
        <action
            android:id="@+id/action_newsDetailsFragment_to_newsFeedFragment"
            app:destination="@id/newsFeedFragment" />
        <argument
            android:name="article"
            app:argType="com.syedabdullah.newsstream.model.NewsArticle" />
        <action
            android:id="@+id/action_newsDetailsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.syedabdullah.newsstream.ui.WebViewFragment"
        android:label="Web View" >
        <action
            android:id="@+id/action_webViewFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
        <argument
            android:name="source_url"
            app:argType="string" />
    </fragment>
</navigation>